<div class='container'>
  <h1 class='text-center'>Crypto Revolution - Крипто Революция NFT</h1>
  <hr />

  <div id='Minter' class='row p-3'>
    <div class='offset-md-3 col-md-6'>
      <div class='card p-3'>
        <div class='panel-heading'>
          <h3 class='panel-title'>Mint your NFT</h3>
        </div>
        <hr />
        <div class='panel-body'>
          <div class='js-wallet-container' style='margin-bottom: 16px;'>
            <p><span class='fw-bold'>Wallet address:</span>
              <code class='js-container-address'></code></p>
          </div>
          <div class='js-warning-container' style='display: none'>
            <p>Please connect your wallet</p>
          </div>
          {{#if ticket.valid}}
            {{#if ticket.nft_mint}}
              <p class='alert alert-warning'>Already minted NFT</p>
            {{else}}
              <div class='text-center'>
                {{#if ticket.isMinting}}
                  <p class='alert alert-warning'>Please try in a couple of minutes</p>
                {{else}}
                  <a class='btn btn-primary btn-mint' data-id='{{ticket.id}}' href='#'>Mint</a>
                {{/if}}
                <div class='d-none justify-content-center align-items-center js-container-loading'>
                  <div class='spinner-border text-primary' role='status'>
                    <span class='visually-hidden'>Loading...</span>
                  </div>
                  <p class='ms-2 mb-0'>Minting...</p>
                </div>
                <p
                  style='display: none;'
                  class='alert alert-success js-container-success'
                >Successfully minted!</p>
              </div>
            {{/if}}
          {{else}}
            <p class='alert alert-danger'>Invalid ticket</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<div id='NFTTemplate' style='display: none;'>
  <div class='col-sm-6 col-md-4 col-lg-3 single_container'>
    <div class='panel panel-default panel-pet'>
      <div class='panel-heading'>
        <h3 class='panel-title'>My NFT</h3>
      </div>
      <div class='panel-body panel-body-nft'>
        <!--<img alt="140x140" data-src="holder.js/140x140" class="img-rounded img-center" style="width: 100%;" src="https://animalso.com/wp-content/uploads/2017/01/Golden-Retriever_6.jpg" data-holder-rendered="true"> -->
        <br /><br />
        <strong>Token Owner</strong>:
        <span class='token-owner'></span><br /><br />
        <strong>Token Id</strong>:
        <span class='token-id'>Warren, MI</span><br /><br />
        <strong>Token URL</strong>:
        <span class='token-url'></span><br /><br />
        <img src='' id='token-img' class='token-img' />
      </div>
    </div>
  </div>
</div>
